<h1 class="page-header">Message</h1>

<div class="row">
  <div class="col-md-6">

    <%= form_tag '/send', :method => 'post' do %>

      <div class="form-group">
        <%= label_tag :recipient %>
        <%= text_field_tag :recipient, "", class: 'form-control', placeholder: 'Enter recipient name' %>
      </div>
	  
	  <div class="form-group">
        <%= label_tag :content %>
        <%= text_field_tag :content, "", class: 'form-control', placeholder: 'Enter message content' %>
      </div>

      <%= submit_tag 'Send message', class: 'btn btn-default' %>
    <% end %>

  </div>
</div>
